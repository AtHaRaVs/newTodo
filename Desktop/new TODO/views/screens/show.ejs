<%- layout("layouts/boilerplate") %>
<div
  class="d-flex mt-5"
  style="width: 100vw; align-items: center; justify-content: center"
>
  <div class="card m-3 p-5" style="width: 50%">
    <div class="card-body text-center">
      <h5 class="card-title p-2">Your Todo</h5>
      <hr />
      <p class="card-text mt-4 mb-4" style="font-size: larger">
        <b>Task: </b><%= todo.todoText %>
      </p>
    </div>
    <div class="d-flex" style="width: 100%">
      <a
        href="#"
        class="btn btn-danger p-3"
        style="width: 50%; border-radius: 0"
        >Delete</a
      >
      <button
        type="button"
        class="btn"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
        style="width: 50%; border-radius: 0; background-color: #fbca03"
      >
        Edit Todo
      </button>
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Todo</h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <form action="/todos/<%= todo._id %>/?_method=PUT" method="post">
                <div class="input-group mb-3">
                  <label for="todoText" class="m-2">Edit Todo: </label>
                  <input
                    type="text"
                    name="todoText"
                    id="todoText"
                    style="width: 100%"
                    class="m-2 p-3"
                  />
                </div>
                <div class="mb-3">
                  <label for="priority" class="form-label p-2"
                    >Select Priority:</label
                  >
                  <div id="priority" class="form-check form-check-inline">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="priority"
                      id="priorityHigh"
                      value="danger"
                    />
                    <label class="form-check-label" for="priorityHigh"
                      >Critical</label
                    >
                  </div>
                  <div class="form-check form-check-inline">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="priority"
                      id="priorityMedium"
                      value="primary"
                    />
                    <label class="form-check-label" for="priorityMedium"
                      >Essential</label
                    >
                  </div>
                  <div class="form-check form-check-inline">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="priority"
                      id="priorityLow"
                      value="success"
                    />
                    <label class="form-check-label" for="priorityLow"
                      >Optional</label
                    >
                  </div>
                </div>
                <button
                  type="submit"
                  class="btn btn-primary ms-2"
                  style="width: 100%; background-color: #fbca03; border: none"
                >
                  EDIT
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
