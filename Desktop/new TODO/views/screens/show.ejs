<%- layout("layouts/boilerplate") %>
<div
  class="d-flex"
  style="width: 100%; align-items: center; justify-content: center"
>
  <div class="card m-3" style="width: 50%">
    <div class="card-body text-center">
      <h5 class="card-title p-2">Your Todo</h5>
      <p class="card-text p-2" style="font-size: larger">
        <b>Task: </b><%= todo.todoText %>
      </p>
    </div>
    <div class="d-flex" style="width: 100%">
      <a
        href="#"
        class="btn btn-danger p-3"
        style="width: 50%; border-radius: 0"
        >Delete</a
      >
      <button
        type="button"
        class="btn btn-success"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
        style="width: 50%; border-radius: 0"
      >
        Edit Todo
      </button>
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Todo</h1>
            </div>
            <div class="modal-body">
              <form action="/todos/<%= todo._id %>/?_method=PUT" method="post">
                <div class="input-group mb-3">
                  <label for="todoText" class="m-2">Edit Todo: </label>
                  <input
                    type="text"
                    name="todoText"
                    id="todoText"
                    style="width: 100%"
                    class="m-2 p-3"
                  />
                </div>
                <button type="submit" class="btn btn-primary ms-2">EDIT</button>
              </form>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
