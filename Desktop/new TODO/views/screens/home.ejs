<%- layout("layouts/boilerplate") %>
<div class="container-fluid d-flex flex-row mt-5" style="height: 100vh">
  <div class="container w-25 h-75 d-flex flex-column border border-5">
    <h1 class="text-center">Your Todo's</h1>
  </div>
  <div
    class="container w-75 h-75 d-flex flex-column rounded-5 shadow-lg"
    style="background-color: #0a0908"
  >
    <h1
      class="display-1 h-75 text-center d-flex m-2"
      style="
        align-items: center;
        justify-content: center;
        color: #f2f4f3;
        font-family: Edu QLD Beginner, cursive;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
      "
    >
      Blitz Board
    </h1>
    <form action="" class="h-25 p-5">
      <div class="input-group mb-3">
        <span
          class="input-group-text p-3 border-0"
          id="todoText"
          style="
            background-color: #0a0908;
            border-color: #f2f4f3;
            color: #f2f4f3;
          "
          >Write Todo -></span
        >
        <input
          type="text"
          class="form-control border-1"
          aria-label="todo"
          aria-describedby="todoText"
          style="
            background-color: #0a0908;
            border-color: #f2f4f3;
            color: #f2f4f3;
          "
        />
      </div>
    </form>
  </div>
</div>
