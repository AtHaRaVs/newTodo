<%- layout("layouts/boilerplate") %>
<div class="container-fluid  d-flex flex-row mt-5" style="height: 100vh;">
  <div class="container-fluid w-25 h-75 d-flex flex-column border border-5 rounded-5 " style="background-color: #0a0908">
    <h1 class="text-center mt-2 mb-1" style="color: #f2f4f3;">Your Todo's</h1>
    <hr style="color: #f2f4f3;">
    <div class="container-fluid p-0">
      <ul class="list-group list-group-flush" >
      <% for(let todo of todos) { %>
      <li class="list-group-item m-2" style="background-color: #0a0908; color: #f2f4f3;">
        <input class="form-check-input me-1" type="checkbox" value="" id="<%= todo._id %>">
        <label class="form-check-label" for="<%= todo._id %>"><%= todo.todoText %></label>
        </li>
      <% } %></div>
    </ul>
  </div>
  <div
    class="container w-75 h-75 d-flex flex-column rounded-5 shadow-lg"
    style="background-color: #0a0908"
  >
    <h1
      class="display-1 h-75 text-center d-flex m-2"
      style="
        align-items: center;
        justify-content: center;
        color: #f2f4f3;
        font-family: Edu QLD Beginner, cursive;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
      "
    >
      Blitz Board
    </h1>
    <form action="/todos" class="h-25 p-5" method="post">
      <div class="input-group mb-3">
        <span
          class="input-group-text p-3 border-0"
          id="todoText"
          style="
            width: 10%;
            background-color: #0a0908;
            border-color: #f2f4f3;
            color: #f2f4f3;
          "
          >Write Todo -></span
        >
        <input
          type="text"
          name="todoText"
          id="todoText"
          style="
            width: 90%;
            background-color: #0a0908;
            border: 1px solid #f2f4f3;
            color: #f2f4f3;
            padding: 10px;
          "
        />
      </div>
    </form>
  </div>
</div>
